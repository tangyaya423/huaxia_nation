/* pages/musical/musical.wxss */
.Musical{
    width: 100%;
}
.Musical_1{
    width: 100%;
    height: 800rpx; 
}
.Musical_1 image{
    width: 100%;
    height: 500rpx; 
}
.Musical_1_1{
    color:#4b556c;
    width: 100%;
    line-height: 80rpx;
    height: 80rpx;
    text-align: center;
    border-bottom: 1px solid #E5E5E5;
    font-size: 110%;
}
.Musical_1_2{
    width: 98%;
    margin:auto;
    height: 200rpx;
    font-size:32rpx;
    margin-top: 10rpx;
    color:#4b556c;
}
.Musical text{
   word-wrap:break-word;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:7;
  overflow: hidden;
  display: -webkit-box;
  text-overflow:ellipsis;
}